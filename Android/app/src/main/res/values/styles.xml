<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="HashtagText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white_100</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WhiteTextBody" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white_100</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WhiteTextHeader" parent="WhiteTextBody">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MaterialButtonTheme" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@color/white_100</item>
    </style>

    <style name="MaterialButtonThemeTransparent" parent="Theme.MaterialComponents">
        <item name="background">@null</item>
        <item name="android:textColor">@color/white_100</item>
    </style>
</resources>
